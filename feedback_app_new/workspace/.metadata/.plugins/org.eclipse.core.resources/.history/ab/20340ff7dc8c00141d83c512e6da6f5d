	public List<User> getUsers(Integer[] userId) {
		session = sessionFactory.openSession();
		Query q = session.createQuery("from User u where u.userId in :user_id");
		q.setParameterList("user_id", userId);
		@SuppressWarnings("unchecked")
		List<User> result = q.list();
		System.out.println("result size..."+result.size());
		if(result.size() >0)
		return result;
		return null;
	}

	public User getUser(Integer userId) {
		session = sessionFactory.openSession();
		Query q = session.createQuery("from User u where u.userId = :user_id");
		q.setParameter("user_id", userId);
		@SuppressWarnings("unchecked")
		List<User> result = q.list();
		System.out.println("result size..."+result.size());
		if(result.size() >0)
		return result;
		return null;
	}
	

}
